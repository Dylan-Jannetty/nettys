---
import Hero from "../components/Hero.astro";
import WhatWeDo from "../components/WhatWeDo.astro";
import InnerLayout from "../layouts/InnerLayout.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Nettys">
  <div class="home-bg">
    <InnerLayout>
      <Hero />
      <div class="swoosh-img" aria-label="swoosh-img"></div>
      <WhatWeDo />
    </InnerLayout>
  </div>
</Layout>

<style>
  .swoosh-img {
    background-image: url("/svpDivider.png");
    background-repeat: no-repeat;
    background-size: cover;
    height: 150px;
    width: 100vw;
    padding-bottom: 50px;

    @media (min-width: 768px) {
      background-image: url("/mvpDivider.png");
      height: 200px;
    }
    @media (min-width: 992px) {
      background-image: url("/lvpDivider.png");
      height: 350px;
      padding-bottom: 100px;
    }
  }
</style>
