  .copy {
    padding: 15px;
    display: flex;
    flex-flow: column;
    margin-bottom: 20px;
    align-items: center;

    button {
      width: 200px;
    }
  }
  .title {
    text-transform: capitalize;
    text-align: center;
    font-weight: 500;
  }
  .description {
    font-weight: 200;
    .key-word {
      color: var(--green);
      font-weight: bold;
    }
  }
  .hero-image {
    width: 100%;
    height: 100%;
    @media (min-width: 992px) {
